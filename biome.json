{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAutofocus": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "error",
        "noUselessFragments": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useHookAtTopLevel": "error",
        "noChildrenProp": "error",
        "noUnreachable": "error"
      },
      "style": {
        "noNegationElse": "warn",
        "useFragmentSyntax": "off",
        "useImportType": "error",
        "useSelfClosingElements": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConsoleLog": "warn",
        "noEmptyBlockStatements": "error",
        "useAwait": "error",
        "noExplicitAny": "warn",
        "noDoubleEquals": "error",
        "noImplicitAnyLet": "warn",
        "noShadowRestrictedNames": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "warn"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "enabled": true,
      "semicolons": "always",
      "quoteStyle": "single",
      "indentStyle": "space",
      "lineWidth": 80,
      "lineEnding": "lf",
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always",
      "indentWidth": 2
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      "node_modules/**/*",
      ".next/**/*",
      "dist/**/*",
      "build/**/*",
      "coverage/**/*",
      "public/**/*",
      "**/*.min.js"
    ],
    "ignoreUnknown": true
  }
}
